<configuration>
    <appender name="richOut" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] [%X{X-Correlation-Id}] %yellow(%C{1.}): %msg%n%throwable</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="richOut" />
    </root>
</configuration>